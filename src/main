    FILE \
<<'KVANTUM_KVCONFIG'
[General]
theme=KvArcDark#
KVANTUM_KVCONFIG

    __file_write;

    FILE_PATH \
<<KVARCDARK__KVCONFIG
$home/.config/Kvantum/KvArcDark#/KvArcDark#.kvconfig
KVARCDARK__KVCONFIG

    FILE \
<<'KVARCDARK__KVCONFIG'
[%General]
author=Tsu Jan
comment=A minimalistic dark theme inspired by the Arc GTK theme
x11drag=menubar_and_primary_toolbar
